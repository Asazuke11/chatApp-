extends layout

block content
  .container-fluid
    .row.align-items-center.justify-content-center
      .item-char-area
        img(src=`./images/cha/${database_data.picURL}`)#cha-lobby
        span.userName #{database_data.username}
      .item-coment.align-items-center
        form#message_form
          input#input_msg(autocomplete="off")
          button Send
      ul#messages
  script#main(data-username=${database_data.username})